{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ],
  "include": [
    "server.ts",
    "**/*.ts",
  ]
}